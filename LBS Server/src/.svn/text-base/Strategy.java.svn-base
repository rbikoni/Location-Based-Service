
import java.util.ArrayList;

/**
 * Strategy Pattern.<br />
 * Implementiert einen Algorithmus zur Lokalisierung eines Punktes.
 * 
 * @author rnb
 */
public interface Strategy {
	/**
	 * Implementiert einen Algorithmus der anhand der akutellen Position den
	 * Wert des naheliegensten Referenzpunktes zurückgibt.
	 * 
	 * @param currentPosition
	 *            aktuelle Position
	 * @param positions
	 *            mögliche Referenzpositionen
	 * @return Referenzposition
	 */
	PositionInfos calculateReferencePosition(PositionInfos currentPosition,
			ArrayList<PositionInfos> positions);
}
